<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hci.healthchatterbox.activity.RegisterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/underline"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/top_icon" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="이름"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/nameedittext"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    app:met_baseColor="@color/BLACK"
                    app:met_errorColor="@color/RED"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_maxCharacters="4"
                    app:met_minCharacters="2"
                    app:met_primaryColor="@color/BLACK"
                    app:met_singleLineEllipsis="true"
                    app:met_textColor="@color/BLACK" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/gendar" />

                <CheckBox
                    android:id="@+id/malecheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="남" />

                <CheckBox
                    android:id="@+id/femalecheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="여" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/age" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/ageedittext"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    app:met_baseColor="@color/BLACK"
                    app:met_errorColor="@color/RED"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_maxCharacters="2"
                    app:met_minCharacters="1"
                    app:met_primaryColor="@color/BLACK"
                    app:met_singleLineEllipsis="true"
                    app:met_textColor="@color/BLACK" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="키"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/cmedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="43dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    app:met_baseColor="@color/BLACK"
                    app:met_errorColor="@color/RED"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_maxCharacters="3"
                    app:met_minCharacters="1"
                    app:met_primaryColor="@color/BLACK"
                    app:met_singleLineEllipsis="true"
                    app:met_textColor="@color/BLACK" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cm"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="몸무게"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/kgedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    app:met_baseColor="@color/BLACK"
                    app:met_errorColor="@color/RED"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_maxCharacters="3"
                    app:met_minCharacters="1"
                    app:met_primaryColor="@color/BLACK"
                    app:met_singleLineEllipsis="true"
                    app:met_textColor="@color/BLACK" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="kg"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/job" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/jobEditText"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:inputType="text"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    app:met_baseColor="@color/BLACK"
                    app:met_errorColor="@color/RED"
                    app:met_floatingLabel="highlight"
                    app:met_hideUnderline="true"
                    app:met_minCharacters="1"
                    app:met_primaryColor="@color/BLACK"
                    app:met_singleLineEllipsis="true"
                    app:met_textColor="@color/BLACK" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/address" />

                <Spinner
                    android:id="@+id/addressspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:padding="15dp"
                    app:srcCompat="@drawable/disease" />

                <CheckBox
                    android:id="@+id/truecheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="있음" />

                <CheckBox
                    android:id="@+id/falsecheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="없음" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/homebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/person_home"
        android:onClick="mOnClick"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
